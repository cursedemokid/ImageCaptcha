<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="TestWindow" Height="1000" Width="1000" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="1" Height="620" Width="460">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="20" />
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Button Name="Button1" Grid.Row="0" Grid.Column="0" Background="White" Click="Button1_Click">
                    
                </Button>
                <Button Name="Button2" Grid.Row="0" Grid.Column="1" Background="White" Click="Button1_Click">
                    
                </Button>
                <Button Name="Button3" Grid.Row="0" Grid.Column="2" Background="White" Click="Button1_Click">
                    
                </Button>
                <Button Name="Button4" Grid.Row="1" Grid.Column="0" Background="White" Click="Button1_Click">
                    
                </Button>
                <Button Name="Button5" Grid.Row="1" Grid.Column="1" Background="White" Click="Button1_Click">
                    
                </Button>
                <Button Name="Button6" Grid.Row="1" Grid.Column="2" Background="White" Click="Button1_Click">
                    
                </Button>
                <Button Name="Button7" Grid.Row="2" Grid.Column="0" Background="White" Click="Button1_Click">
                    
                </Button>
                <Button Name="Button8" Grid.Row="2" Grid.Column="1" Background="White" Click="Button1_Click">
                    
                </Button>
                <Button Name="Button9" Grid.Row="2" Grid.Column="2" Background="White" Click="Button1_Click">
                    
                </Button>
            </Grid>
            <Grid Grid.Row="2">
                <ListBox Name="PicturesLb" SelectionChanged="PicturesLb_SelectionChanged">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="150" Height="150" Margin="20">
                                <Image Source="{Binding ImagePath}" Stretch="Uniform"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
        <Button Name="CheckCaptchaBtn" Grid.Row="2" Grid.Column="1" Content="Проверить" Click="CheckCaptchaBtn_Click" Height="50" Width="200" FontSize="26"/>
    </Grid>
</Window>
